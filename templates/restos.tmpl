<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="static/bootstrap/css/bootstrap.css" rel="stylesheet" media="screen">
    <link href="static/bootstrap/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="static/bootstrap/css/docs.css" rel="stylesheet">
  </head>

  <body data-spy="scroll" data-target=".navbar">

    <!-- top navbar -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <ul class="nav">
            <li><a href="#"><i class="icon-home"></i> Restos</a></li>
            {% for arr in range(75001, 75021) + ['Unknown',] %}
              <li><a href="#{{ arr }}">{{ str(arr).replace('750', '') }}</a></li>
            {% end %}
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="span9"> <!-- body -->
          {% for arr in range(75001, 75021) + ['Unknown',] %}
          <section id="{{ arr }}">
            <h3>{{ arr }}</h3>
            <table class="table table-condensed table-striped table-bordered table-hover">
              {% for resto in context['restos_by_zip'].get(str(arr), []) %}
                <tr>
                  <td>{{ resto['name'] }}</td>
                  <td>{% for tag in resto['tags'] %}<span class="label">{{ tag }}</span>&nbsp{% end %}
                  <td><a href="{{ resto['map_link'] }}">{{ resto['short_address'] }}</a></td>
                  <td><a href="{{ resto['search_link'] }}">Google</a></td>
                  {% if context['user_authd'] %}
                    <td><a href="{{ resto['edit_link'] }}">edit</a></td>
                    <td><a href="{{ resto['rm_link'] }}">remove</a></td>
                  {% end %}
                </tr>
              {% end %}
            </table>
          </section>
          {% end %} 

          <table class="table table-condensed table-bordered">
            <tr><td>
              {% for tag in context['tag_list'] %}
                <a href="/restos?tag={{ tag }}">{{ tag }}</a>&nbsp
              {% end %}
            </td></tr>
          </table>

        </div> <!-- span9 -->

        <!-- side navbar -->
        <div class="span3 bs-docs-sidebar">
          <ul class="nav bs-docs-sidenav affix">
            <li class="nav-header">tags</li>
            <li>
              <table class="table table-bordered"><tr><td>
                {% for tag in context['tag_list'] %}
                  {% if tag %}
                    <a href="/restos?tag={{ tag }}" >{{ tag }}</a>
                  {% end %}
                {% end %}
              </td></tr></table>
            </li>
          </ul>
        </div> <!-- span3 -->
      </div> <!-- row-fluid -->
    </div> <!-- container-fluid -->

    <script src="static/jquery/jquery-latest.js"></script>
    <script src="static/bootstrap/js/bootstrap.js"></script>
  </body>
</html>
